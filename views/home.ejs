<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>KIIT Substitute Management System</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: sans-serif;
    }

    .container {
      display: flex;
      width: 100vw;
      height: 100vh;
    }

    .left-side {
      width: 20%;
      background-color: #11c878;
      color: white;
      padding: 20px;
      box-sizing: border-box;
    }

    .left-side p {
      margin-bottom: 20px;
    }

    .left-side ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .left-side li {
      margin-bottom: 20px;
    }

    .left-side a {
      text-decoration: none;
      color: white;
    }

    .left-side a:hover {
      text-shadow: 0px 0px 10px rgba(69,69,69,1);
    }

    .left-side button {
      background-color: transparent;
      color: red;
      border: none;
      cursor: pointer;
      margin-top: 300px;
      font-size: 19px;
    }

    .right-side {
      width: 80%;
      background-color: white;
      padding: 20px;
      box-sizing: border-box;
      overflow-y: auto;
    }

    .right-side h1 {
      text-align: center;
    }

    .right-side h2 {
      margin-bottom: 10px;
    }

    .request-item {
      border: 1px solid #ddd;
      padding: 10px;
      margin-bottom: 10px;
      border-radius: 5px;
    }

    .request-item h3 {
      margin: 0;
      font-size: 18px;
    }

    .request-details {
      display: flex;
      justify-content: space-between;
      font-size: 16px;
      margin-top: 10px;
      align-items: center;
    }

    .request-details p {
      margin: 0;
    }

    .request-list {
      max-height: 60vh;
      overflow-y: auto;
      padding-right: 10px;
      box-sizing: border-box;
    }

    .viewButton{
      background-color: #11c878;
      border: none;
      border-radius: 8px;
      padding: 7px 10px 7px 10px;
      font-size: 15px;
      cursor: pointer;
    }
    .viewButton:hover{
      background-color: #0eb46c;
    }

  </style>
</head>

<body>
  <div class="container">
    <div class="left-side">
      <p>Username</p>
      <ul>
        <li><a href="/create">Create Request</a></li>
        <li><a href="/previous">Previous Request</a></li>
        <li><a href="/accepted">Accepted Request</a></li>
        <li><a href="#">Time Table</a></li>
      </ul>
      <button id="sign-out">Sign Out</button>
    </div>
    <div class="right-side">
      <h1>Welcome Teacher to KIIT Substitute Management System</h1>
      <h2>Recent Requests</h2>
      <div class="request-list">
        <% if (requests.length > 0) { %>
          <% requests.forEach(request => { %>
            <div class="request-item">
              <h3><%= request.subject %> - <%= request.section %></h3>
              <div class="request-details">
                <p>Day: <%= request.day %></p>
                <p>Time: <%= request.time %></p>
                <p>Room: <%= request.room %></p>
                <button class="viewButton" onclick="window.location.href = '/request/<%= request._id %>'">View</button>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p>No recent requests found.</p>
        <% } %>
      </div>
    </div>
  </div>
</body>
</html>